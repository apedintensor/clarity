{
  "name": "clarity",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:push": "pnpm --filter @clarity/db db:push",
    "db:studio": "pnpm --filter @clarity/db db:studio",
    "cli:link": "pnpm --filter @clarity/cli link --global",
    "cli:dev": "pnpm --filter @clarity/cli dev"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.0",
    "turbo": "^2.4.0",
    "typescript": "^5.6.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "dotenv": "^17.3.1"
  }
}
